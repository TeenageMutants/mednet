%h2 Новая тема

= form_for @post, url:  add_post_new_forum_path, :method => 'post' do |f|
  .form-group
    = f.label :title, "Название"
    %br
    = f.text_field :title, prompt: "Название темы", class: "form-control"
    %br
  .form-group
    = f.label :body, "Описание"
    %br
    = f.text_area :body, :value => params[:body], class: 'form-control', :rows => "3", prompt: "Описание темы"

    = f.hidden_field :user_id, :value => current_user.id
  = f.submit "Сохранить", class: 'btn btn-sm btn-primary', id: 'save_post'
  = link_to "Закрыть", forums_path, class: "btn btn-sm btn-default", data: { confirm: "Точно выйти?"}


