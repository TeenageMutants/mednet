= render 'menu'
.form-control
  = form_tag(add_office_park_equipments_path, method: 'get') do
    .form-group
      = label_tag :branch_id, "Выберите филиал"
      = select_tag :branch, options_from_collection_for_select(find_branches, :id, :short_name)
      = label_tag :dep, "Выберите отдел:", id: "label_dep"
      = grouped_collection_select(:department, :branch_id, find_branches, :departments, :short_name, :id, :name)

      .form-inline
        .form-group
          = label_tag :number, "Номер кабинета"
          %br
          = text_field_tag :number
        .form-group
          = label_tag :floor, "Этаж"
          %br
          = text_field_tag :floor
        .form-group
          = label_tag :block, "Корпус"
          %br
          = text_field_tag :block
      = submit_tag "добавить кабинет", class: "btn btn-primary"

