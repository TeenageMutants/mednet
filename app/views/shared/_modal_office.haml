#modal_office.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "#modal_office", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{style: "margin-top: 100px; width:400px; z-index: 9999999999;"}
    = form_tag(office_park_equipments_path,method: 'get')
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4#modal_office.modal-title
      .modal-body
        = label_tag :branch_id, "Выберите филиал"
        = select_tag :branch, options_from_collection_for_select(find_branches, :id, :short_name)
        -#= f.label :dep, "Выберите отдел:", id: "label_dep"
        = grouped_collection_select(:department, :branch_id, find_branches, :departments, :short_name, :id, :name)
        -#= f.label :number, "Номер кабинета"
        = text_field_tag :number
        -#= f.label :floor
        = text_field_tag :floor
        -#= f.label :block, "Корпус"
        = text_field_tag :block
        = submit_tag "добавить кабинет"