#modal_office.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{style: "margin-top: 100px; width:400px; z-index: 9999999999;"}
    = form_for @office, url: office_park_equipments_path, :method => 'post', remote: true do |f|
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          %h4#modal_office.modal-title
        .modal-body

          .form-group
            = f.label "Номер или название кабинета"
            %br
            = f.text_field :number, class: "form-control", :autofocus => true, placeholder: "Название кабинета"

          .form-group
            .row
              .col
                = f.label "Этаж"
                %br
                = f.text_field :floor, class: "form-control", :autofocus => true, placeholder: "Этаж"
              .col
                = f.label "Корпус"
                %br
                = f.text_field :block, class: "form-control", :autofocus => true, placeholder: "Корпус"
              .col
                -#= f.label "Филиал"
                = f.text_field :branches_department_id
          = hidden_field_tag :act, 'create_office'
          = f.submit "Сохранить"



