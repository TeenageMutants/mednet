#modal_forum_post.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{style: "margin-top: 100px; width:500px; z-index: 999999;"}
    = form_for Post.new, url: {action: "create"} do |f|
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"}
          %h4#modal_forum_post.modal-title Создание темы форума
        .modal-body
          .form-group
            = f.label :title, "Название"
            %br
            = f.text_field :title, prompt: "Название темы", class: "form-control"
            %br
          .form-group
            = f.label :body, "Описание"
            %br
            = f.text_area :body, :value => params[:body], class: 'form-control', :rows => "3", prompt: "Описание темы"

            = f.hidden_field :user_id, :value => current_user.id
          = f.submit "Сохранить", class: 'btn btn-sm btn-primary', id: 'save_post'
          = link_to "Закрыть", forums_path, class: "btn btn-sm btn-default", data: { confirm: "Точно выйти?"}

