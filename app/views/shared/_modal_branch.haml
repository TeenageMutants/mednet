#modal_branch.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "#modal_branch", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{style: "margin-top: 100px; width:400px; z-index: 9999999999;"}
    = form_for Branch.new, url: {action: "create_branch"}, method: 'post' do |f|
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          %h4#modal_branch.modal-title
        .modal-body

          .form-group
            = f.label :short_name, "Сокращенное название филиала"
            = f.text_field :short_name, class: "form-control"
          .form-group
            = f.label :full_name, "Полное название филиала"
            = f.text_field :full_name, class: "form-control"
          .form-group
            = f.label :senior_phone, "Контактный телефон"
            = f.text_field :senior_phone, class: "form-control"
          .form-group
            = f.label :address, "Почтовый адрес"
            = f.text_field :address, class: "form-control"
            = f.hidden_field :organization_id, :value => org_id
          .form-group
            = f.submit "добавить филиал", class: "btn btn-primary"
